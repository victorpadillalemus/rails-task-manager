<h1>My Tasks</h1>
  <% @tasks.each do |t| %>
    <div class="checkbox"><label>
      <% if t.completed %>
        <input type = "checkbox" checked>
      <% else %>
        <input type = "checkbox">
      <% end %>

      <%= link_to t.title, task_path(t) %></label>
      <button type="button" class="btn btn-primary ml-2"><%= link_to '', destroy_task_path(t)  %></button>
    </div>
  <% end %>
  <p class="mt-3"><%= link_to '+ Add a new task', tasks_new_path(@task) %></p>

